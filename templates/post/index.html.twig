{% extends('base.html.twig') %}

{% block body %}
    <div class="container">
        <div style="padding: 20px 0;">
            <h2 style="float:left;">List of all posts</h2>
            <a href="{{ path('post.create') }}" class="btn btn-primary" style="float: right;">ADD </a>
        </div>
        <table class="table table-striped">
            <thead>
            <th>ID</th>
            <th>Title</th>
            <th>Actions</th>
            </thead>
            <tbody>
            {% for post in posts %}
                <tr>
                    <td>{{ post.id }}</td>
                    <td>
                        <a href="{{ path('post.show', {id: post.id}) }}">
                            {{ post.title }}
                        </a>
                    </td>
                    <td>
                        <a href="{{ path('post.delete', {id: post.id}) }}" class="text-danger">
                            DELETE
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}