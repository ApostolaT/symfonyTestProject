{% extends('base.html.twig') %}

{% block body %}
    <div class="container">
    <h2>List of all posts</h2>
    <table class="table table-striped">
        <thead></thead>
        <tbody>
        {% for post in posts %}
            <tr>
                <td>{{ post.id }}</td>
                <td>{{ post.title }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>
{% endblock %}